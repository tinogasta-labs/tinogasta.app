{
  "name": "tinogasta.app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "pnpm run \"/dev:/\"",
    "dev:remix": "remix vite:dev",
    "dev:turso": "turso dev --db-file db.sqlite",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "prettier": "prettier \"**/*.+(js|jsx|css|ts|tsx|cjs)\"",
    "format": "npm run prettier -- --list-different",
    "format:write": "npm run prettier -- --write",
    "validate": "run-s typecheck lint format",
    "prepare": "husky"
  },
  "dependencies": {
    "@libsql/client": "^0.7.0",
    "@remix-run/cloudflare": "^2.10.0",
    "@remix-run/cloudflare-pages": "^2.10.0",
    "@remix-run/react": "^2.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.31.2",
    "isbot": "^4.1.0",
    "lucide-react": "^0.399.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-flat-routes": "^0.6.5",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "@remix-run/dev": "^2.10.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.22.8",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "3.62.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
